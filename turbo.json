{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "//#build": {
      "outputs": ["lib/**", "peers/**", "types/generated/**"],
      "inputs": ["src/**", "oxide/**", "nesting/**", "oxide-node-api-shim/**", "types/**"]
    },
    "test": {
      "env": ["OXIDE"],
      "dependsOn": ["//#build"],
      "outputs": []
    },
    "//#test": {
      "env": ["OXIDE"],
      "dependsOn": ["//#build"],
      "outputs": [],
      "inputs": ["tests/**"]
    },
    "//#style": {
      "outputs": ["**/*.js", "**/*.ts"]
    }
  }
}
